                        <Button x:Name="btImportFavorite" Content="Import" HorizontalAlignment="Left" Margin="4,29,0,0" VerticalAlignment="Top" Width="44" Click="btFavoriteItemsImport_Click" Grid.Row="1" Height="20"/>
