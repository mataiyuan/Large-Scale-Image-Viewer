                          />
            </ToolBar>

            <ToolBar x:Name="MagnifierToolBar" Margin="0,0,-1,0">

                <Button x:Name="btZoomOut" ToolTip="Zoom In Image" Height="22" Width="22" Margin="2" Click="ImageZoomIn_Click" ToolBar.OverflowMode="Never">
