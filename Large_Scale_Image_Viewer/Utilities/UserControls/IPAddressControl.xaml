        <TextBox Text="0" x:Name="txtboxSecondPart" MaxLength="3" TextChanged="txtbox_TextChanged" BorderThickness="0" TabIndex="2" VerticalContentAlignment="Stretch" KeyDown="txtboxSecondPart_KeyDown" PreviewKeyUp="txtboxSecondPart_PreviewKeyUp" Height="25" Margin="-3,0,-4,0" FontSize="16" />
        <Label Content="." x:Name="label2" VerticalContentAlignment="Bottom" Height="25" Margin="4,0,6,0" />
        <TextBox  Text="0" x:Name="txtboxThridPart" MaxLength="3" TextChanged="txtbox_TextChanged" BorderThickness="0" TabIndex="3" VerticalContentAlignment="Stretch" KeyDown="txtboxThridPart_KeyDown" PreviewKeyUp="txtboxThridPart_PreviewKeyUp" Height="25" Margin="-6,0,-1,0" FontSize="16" />
        <Label Content="." x:Name="label3" VerticalContentAlignment="Bottom" Height="25" Margin="1,0,9,0" />
        <TextBox Text="0" x:Name="txtboxFourthPart" MaxLength="3" TextChanged="txtbox_TextChanged" BorderThickness="0" TabIndex="4" VerticalContentAlignment="Stretch" Height="25" Margin="-9,0,0,0" HorizontalAlignment="Left" Width="30" FontSize="16"   />
    </UniformGrid>
</UserControl>
