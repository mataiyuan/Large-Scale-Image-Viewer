        <TextBox Text="0" Grid.Column="0" Grid.Row="0"  Name="txtboxFirstPart" TextChanged="txtbox_TextChanged" MaxLength="3" BorderThickness="0" TabIndex="1" VerticalContentAlignment="Stretch" PreviewKeyDown="txtboxFirstPart_PreviewKeyDown" PreviewKeyUp="txtboxFirstPart_PreviewKeyUp" Height="25" Margin="0,0,-7,0" HorizontalAlignment="Left" Width="30" FontSize="16" />
